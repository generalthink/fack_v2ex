		<class-a>com.generalthink.v2ex.data.entity.TopicContent</class-a>
		<class-b map-set-method="setTopicBody">com.generalthink.v2ex.data.vo.topic.TopicBody</class-b>
	</mapping>
	
	<mapping>
		<class-a>com.generalthink.v2ex.data.entity.TopicPostScript</class-a>
		<class-b map-set-method="setTopicBody">com.generalthink.v2ex.data.vo.topic.TopicBody</class-b>
	</mapping>
	
	<mapping>
		<class-a>com.generalthink.v2ex.data.entity.TopicReplyContent</class-a>
		<class-b map-set-method="setTopicBody">com.generalthink.v2ex.data.vo.topic.TopicReply</class-b>
